{
  "name": "mini-sns",
  "version": "1.0.0",
  "private": true,
  "description": "Mini-SNS - Serverless social networking service",
  "workspaces": [
    "services/*"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "typecheck": "tsc --build",
    "clean": "rm -rf node_modules dist build coverage .turbo && npm run clean --workspaces --if-present",
    "dev:user-service": "npm run dev -w services/user-service",
    "dev:post-service": "npm run dev -w services/post-service",
    "dev:social-service": "npm run dev -w services/social-service",
    "dev:timeline-service": "npm run dev -w services/timeline-service",
    "build:user-service": "npm run build -w services/user-service",
    "build:post-service": "npm run build -w services/post-service",
    "build:social-service": "npm run build -w services/social-service",
    "build:timeline-service": "npm run build -w services/timeline-service",
    "test:user-service": "npm run test -w services/user-service",
    "test:post-service": "npm run test -w services/post-service",
    "test:social-service": "npm run test -w services/social-service",
    "test:timeline-service": "npm run test -w services/timeline-service",
    "openapi:validate": "node scripts/validate-openapi.js",
    "openapi:generate": "node scripts/generate-openapi-types.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clutch-t-mitani/copilot-coding-20260102.git"
  },
  "keywords": [
    "sns",
    "serverless",
    "microservices",
    "aws",
    "lambda",
    "dynamodb"
  ],
  "author": "Mini-SNS Development Team",
  "license": "MIT"
}
