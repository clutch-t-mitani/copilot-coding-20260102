# Environment variables for local development
# Copy this file to .env and adjust values as needed

# AWS LocalStack Configuration
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566

# DynamoDB Local
DYNAMODB_ENDPOINT=http://localhost:8000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Application Configuration
NODE_ENV=development
LOG_LEVEL=debug
PORT=3000

# Cognito (use LocalStack endpoints for local development)
COGNITO_USER_POOL_ID=local-user-pool
COGNITO_CLIENT_ID=local-client-id
COGNITO_REGION=ap-northeast-1

# EventBridge
EVENTBRIDGE_BUS_NAME=mini-sns-dev-event-bus

# DynamoDB Table Names
USER_TABLE_NAME=mini-sns-dev-user-ddb
POST_TABLE_NAME=mini-sns-dev-post-ddb
SOCIAL_TABLE_NAME=mini-sns-dev-social-ddb
TIMELINE_TABLE_NAME=mini-sns-dev-timeline-ddb

# Service Ports (for local development)
USER_SERVICE_PORT=3001
POST_SERVICE_PORT=3002
SOCIAL_SERVICE_PORT=3003
TIMELINE_SERVICE_PORT=3004

# JWT Configuration (for local development only - DO NOT use in production)
JWT_SECRET=local-development-secret-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=30d
